<ItemLabel@Label>:
	font_size: '25sp'
	halign: 'left'
	valign: 'middle'
	text_size: self.size

<Container>:
	rows: 3

	text_input: text_input
	number_1: number_1
	number_2: number_2

	AnchorLayout:
		anchor_y: 'top'
		size_hint: 1, 0.30
		padding: 30

		TextInput:
			id: text_input
			font_size: '40sp'
			multiline: False
			input_type: 'number'
			input_filter: 'int'

	GridLayout:
		cols: 2

		BoxLayout:
			orientation: 'vertical'
			padding: [30, 0, 0, 0]

			ItemLabel:
				text: "First number"

			ItemLabel:
				text: "Second number"

	
		BoxLayout:
			orientation: 'vertical'
			size_hint: 0.5, 1

			ItemLabel:
				id: number_1
				text: '0'

			ItemLabel:
				id: number_2
				text: '0'

	BoxLayout:
		size_hint: 0.9, 0.15
		padding: [30, 0, 30, 20]

		Button:
			text: 'Go!'
			font_size: 40

			on_release:
				root.calculate()

